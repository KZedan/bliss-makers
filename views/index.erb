<!Doctype html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="skeleton.css">

<style>

  body {
  background-image: url("bliss.jpg");
  background-position: 50% 50%;
  background-repeat: no-repeat;
}
</style>
</head>
<body>

<h1> Welcome to Bliss </h1>
<form action="/spaces" method="get">
  <input name="user_name" type="submit" value="Spaces"/>
</form>
<form action="/requests" method="get">
  <input name="requests" type="submit" value="Requests"/>
</form>
<form action="/logout" method="get">
  <input name="logout" type="submit" value="Logout"/>
</form>
<table class="u-full-width">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @spaces.each do |space| %>
      <td><%= space.space_name %></td>
      <td><%= space.description %></td>
      <td><%= space.price %></td>
      <% end %>
    </tr>
  </tbody>
</table>



</body>
