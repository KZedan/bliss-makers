<!Doctype html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="skeleton.css">
</head>
<body bgcolor="#ebe7dd">
<div class="header-site">
  <br>

  <div class="navbar">
    <div class="dropdown">
      <button class="dropbtn">Menu
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <a href="/spaces">Listings</a>
        <a href="/requests">Requests</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
  <center><h1><br> Requests </h1></center>
  </div>


<div class="section values" >


        <div class="one-half column value">
          <h4>Requests I've made</h4>
          <% @requests.each do |request| %>
          <div class="container">
          <% if request.user_id == @id_check %>
          <%= request.space_name %> <%= request.confirmed %><br>
          <% end %>
          </div>
          <% end %>

        </div>
        </div>

        <div class="one-half column value">
          <h4>Requests I've recieved</h4>
          <% @requests.each do |request| %>

          <% if request.space_id == @id_compare_space %>
          <div class="container">
          <%= request.space_name %> <%= request.confirmed %><br>
          </div>
          <% end %>
          <% end %>
        </div>


      </body>
