<!Doctype html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="skeleton.css">
</head>
<body bgcolor="#ebe7dd">
<div class="header-site">
  <br>

  <div class="navbar">
    <div class="dropdown">
      <button class="dropbtn">Menu
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <a href="/spaces">Listings</a>
        <a href="/requests">Requests</a>
        <a href="/spaces/new"> Add Listing </a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
  <div class="w3-container w3-center w3-animate-opacity">
  <center><h1><br> Requests </h1></center>
  </div>
  </div>


  <div class="section values" >
          <div class="one-half column value">
            <h4>Requests I've made</h4>
            <% @requests.each do |request| %>
            <% if request.user_id == @id_check %>
            <div class="containerrequest">
            <%= request.space_name %> <%= request.confirmed %><br>
            </div>

            <% end %>

            <% end %>

          </div>
          </div>

          <div class="one-half column value">
            <h4>Requests I've recieved</h4>
            <% @requests.each do |request| %>
            <% if request.space_id == @id_compare_space %>
            <div class="containerrequest">
            <%= request.space_name %> <%= request.confirmed %><br>
            </div>
            <center><form action="/requests/confirm" method="post">
              <input type="hidden" name="_method" value="PATCH" />
              <input type="submit" value="Confirm" />
              </form>
            <% end %>

            <% end %>
          </div>


        </body>
